---
import * as osu from 'osu-api-v2-js';

let isLoggedIn = false;
let avatar_url = '';
let username = '';

const token_string = Astro.cookies.get('osuturkiye-token')?.value;

if (token_string) {
    try {
        const token = JSON.parse(token_string);
        const osu_api = new osu.API(token);
        const user = await osu_api.getResourceOwner();
        if (user) {
            isLoggedIn = true;
            avatar_url = user.avatar_url;
            username = user.username;
        }
    } catch (error) {
        Astro.cookies.delete('osuturkiye-token', { path: '/' });
        console.error("Error parsing osu! API cookie:", error);
    }
}
---
<div class='sticky top-0 w-full text-white px-6 py-4 bg-[#242424]'>
  <div class='flex justify-between items-center w-[97%] mx-auto px-4'>

    <div class="flex items-center space-x-12">
      {/* Left side - Logo  */}
      <a href="/" class='text-xl font-bold text-white'>
        osu!türkiye
      </a>

      {/* Left side - Navigation */}
      <ul class="flex items-center space-x-8">
        <li>
          <a href='/' class='nav-link text-sm font-medium text-white px-4 py-2 rounded-md'>
            Home
          </a>
        </li>
        
        <li>
          <a href="/about" class='nav-link text-sm font-medium text-white px-4 py-2 rounded-md'>
            About
          </a>
        </li>
      </ul>
    </div>

    {/* Right side - Login Button */}
    <div class="relative group">
      {isLoggedIn ? (
          <a href="/profile" class="flex items-center space-x-2">
            <img src={avatar_url} alt={username} class="w-8 h-8 rounded-full"/>
          </a>
          <div class="absolute right-0 top-full mt-2 w-48 bg-[#2a2a2a] rounded-lg shadow-lg border border-white/10 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 ease-in-out transform translate-y-1 group-hover:translate-y-0 z-50">
            <div class = "py-2">

              {/* User Info */}
              <div class="px-4 py-2 border-b border-white/10">
                <p class="text-xs text-gray-400">Hoş geldin!</p>
                <p class="text-sm font-medium text-white">{username}</p>
              </div>

              {/* Menu Items */}
              <a href="/profile" class="block px-4 py-2 text-sm text-white hover:bg-white/5">
                Profil
              </a>
              <a href="/settings" class="block px-4 py-2 text-sm text-white hover:bg-white/5">
                Ayarlar
              </a>

              {/* Divider */}
              <div class="border-t border-white/10 my-1"></div>
              
              {/* Logout */}
              <a href="/logout" class="block px-4 py-2 text-sm text-red-400 hover:bg-red-500/10">
                Çıkış Yap
              </a>
            </div>
          </div>
      ) : (
      <a href="/login" class='text-sm font-medium text-white tracking-wide'>
        Giriş Yap
      </a>
      )}
    </div>

  </div>
</div>

<style>
  .nav-link {
    position: relative;
    overflow: hidden;
    z-index: 1;
    transition: color 0.3s ease-in-out;
  }

  .nav-link::before {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 0;
    background-color: #dc2626; /* red-600 */
    transition: height 0.3s ease-in-out;
    z-index: -1;
    border-radius: 0.375rem; /* rounded-md */
  }

  .nav-link:hover::before {
    height: 100%;
  }
</style>
